<p style="color: green"><%= notice %></p>
<p style="color: red"><%= alert %></p>
<div class="border-2 mx-auto rounded-sm p-6 max-w-3xl mt-5">
  <%= form_with(url: sign_up_path, class: "flex flex-col items-stretch gap-5") do |form| %>
    <h1 class="font-semibold text-3xl">Sign up</h1>
    <% if @user.errors.any? %>
      <div class="text-red-600">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul class="list-disc ml-5">
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="flex flex-col">
      <%= form.label :email %>
      <%= form.email_field :email, value: @user.email, required: true, autofocus: true, autocomplete: "email", class: input_classes.render %>
    </div>
    <div class="flex flex-col">
      <%= form.label :password %>
      <%= form.password_field :password, required: true, autocomplete: "new-password", class: input_classes.render %>
      <div class="text-sm font-medium mt-1">12 characters minimum.</div>
    </div>
    <div class="flex flex-col">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", class: input_classes.render %>
    </div>
    <div>
      <%= form.submit "Sign up", class: button_classes.render(full: true) %>
    </div>
  <% end %>
  <hr class="my-4 border">
  <div>
    <%= button_to "Sign up with GooGoo", "/auth/google_oauth2", data: { turbo: false }, class: "justify-center #{button_classes.render(full: true)}" %>
  </div>
  <div class="mt-4 text-center">
    <%= link_to "Sign in", sign_in_path, class: "font-medium hover:underline hover:font-semibold" %> |
    <%= link_to "Forgot your password?", new_identity_password_reset_path, class: "font-medium hover:underline hover:font-semibold" %>
  </div>
</div>
